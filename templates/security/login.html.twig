{% extends 'base.html.twig' %}

{% block body %}
	{% if error is defined and error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

    <div class="welcome-container">
    <h1>Zaloguj się do aplikacji</h1>
    <form method="post">
        <div class="form-group">
{#            <label for="username">E-mail:</label>#}
            <input class="form-control" type="email" name="_username" id="username" placeholder="E-mail" required>
        </div>
        <br>
        <div class="form-group">
{#            <label for="password">Hasło:</label>#}
            <input class="form-control" type="password" name="_password" id="password" placeholder="Hasło" required>
            <br>
        </div>
        <button type="submit" class="btn btn-primary">Zaloguj</button>

    </form>
    </div>
{% endblock %}

