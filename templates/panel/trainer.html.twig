{% block body %}
    <h1>Panel Trenera</h1>
    <p>Witaj, {{ user.name }}!</p>
    <p>Email: {{ user.email }}</p>

    <form method="POST">
        <label for="email">E-mail klienta:</label>
        <input type="email" id="email" name="email" required>
        <button type="submit">Dodaj klienta</button>
    </form>

    {% if message %}
        <div class="alert alert-info">
            {{ message }}
        </div>
    {% endif %}
    <hr>

    {# Formularz dodawania ćwiczenia #}
    <h2>Dodaj ćwiczenie</h2>
    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.type) }}
        {{ form_row(form.youtubeLink) }}
        <button type="submit" class="btn btn-primary">Dodaj ćwiczenie</button>
    {{ form_end(form) }}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
{% endblock %}

